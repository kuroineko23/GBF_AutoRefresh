{
    "name": "GBF_AutoRefresh",
    "version": "2.0",
    "manifest_version": 3,
    "description": "Granblue Fantasy Auto Refresh",
    "permissions": [
      "tabs",
      "storage",
      "webRequest"
    ],
    "host_permissions": [
      "*://*.mbga.jp/*",
      "*://*.game.jp/*",
      "*://*.gbf.jp/*",
      "*://*.granbluefantasy.jp/*"
    ],
    "options_ui": {
      "page": "option.html",
      "open_in_tab": false
    },
    "background": {
      "service_worker": "refresh.js"
    }
  }
  